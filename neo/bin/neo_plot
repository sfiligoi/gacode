#!/bin/bash
#==============================================================================
# neo_plot
#
# PURPOSE:
#  Plotting routines for NEO output.
#==============================================================================

#==============================================================================
# Syntax validity check and help message
#
n=$#

if [ $n -eq 0 ]
then
  echo
  echo "Usage:    neo_plot [options]"
  echo
  echo "          -p <path>"
  echo "          Set optional path to simulation directory."
  echo "          [The default path is the current directory]"
  echo
  echo "          -e <simdir>"
  echo "          Use data in <simdir>."
  echo 
  echo "          -plot <type>"
  echo "          Generate plot of given type."
  echo "          If this keyword is omitted, data will be listed to the screen."
  echo "           <type> = xtsurf"
  echo
  echo "          -i"
  echo "          Use python in interactive mode.  Useful if matplotlibrc has interactive:True  "
  echo
  echo "Example:"
  echo
  echo "   neo_plot -e . -plot xtsurf"

  exit 1
fi
#==============================================================================

#==============================================================================
# Define variables for flag capture
#
# Default simulation directory
LOCDIR=.
SIMROOT=$PWD
PLOT_TYPE=xtsurf
FTYPE=screen
INTERACTIVE=
#==============================================================================

#==============================================================================
# Parse command line options
#
while [ $# -gt 0 ] ; do
  case "$1" in

  -plot) shift ; PLOT_FLAG=1 ; PLOT_TYPE=$1 ;;
 
  -e) shift ; LOCDIR=$1 ;;

  -p) shift ; SIMROOT=$1 ;;

  -img) shift ; FTYPE=$1 ;;
  
  -i) INTERACTIVE=-i ;;

  *) echo "ERROR: incorrect neo_plot syntax." ; exit 1 ;;

  esac
  shift
done
#==============================================================================

if [ "$LOCDIR" == "." ]
then
   LOCDIR=`basename $PWD`
   cd .. ; SIMROOT=$PWD
fi
SIMDIR=$SIMROOT/$LOCDIR
cd $SIMDIR

#==============================================================================
case "$PLOT_TYPE" in

   xtsurf)  
	python $INTERACTIVE $GACODE_ROOT/neo/bin/neo_plot_xtsurf.py $SIMDIR $FTYPE  ;;
   
esac 

exit 0
