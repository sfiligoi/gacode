#!/bin/bash
#==============================================================================
# tgyro_plot
#
# PURPOSE:
#  Plotting/listing routines for TGYRO output.
#==============================================================================

#==============================================================================
# Syntax validity check and help message
#
n=$#

if [ $n -eq 0 ]
then
  echo
  echo "Usage:    tgyro_plot [options]"
  echo
  echo "          -p <path>"
  echo "          Set optional path to simulation directory."
  echo "          [The default path is the current directory]"
  echo
  echo "          -e <simdir>"
  echo "          Use data in <simdir>."
  echo 
  echo "          -ext <plot extension=screen,pdf,png,dump (default screen)>"
  echo 
  echo "          -u <units>"
  echo "          Plot units (0=GB,1=Physical)."
  echo 
  echo "          -plot <type>"
  echo "          Generate plot of given type."
  echo "           <type> = note (notebook plot of quantities for r <= r_*),"
  echo "                    glob (global data from input.profiles)"
  echo 
  echo " OPTIONS FOR <type>=note"
  echo
  echo "          -dots"
  echo "          Toggle dot overlay."
  echo
  echo " OPTIONS FOR <type>=glob"
  echo
  echo "          -f <func>"
  echo "          <f> = quantity to plot (Te, Ti_1, etc)"
  echo
  echo "          -r <flux-surface coordinate for plotting>"
  echo "          Choices are r,r/a,rho"
  echo
  echo "          -loc <Legend location: 1,2,3,4>"
  echo
  echo "Example:"
  echo
  echo "   tgyro_plot -e . -plot note"
  echo "   tgyro_plot -e . -plot glob -f Te"

  exit 1
fi
#==============================================================================

#==============================================================================
# Define variables for flag capture
#
# Default simulation directory
LOCDIR=.
EXT=screen
SIMROOT=$PWD
PLOT_TYPE=null
UNITS=0
DOTS=0
F=ne
RVAR=r/a
LOC=1
#==============================================================================

#==============================================================================
# Parse command line options
#
while [ $# -gt 0 ] ; do
  case "$1" in

  -plot) shift ; PLOT_TYPE=$1 ;;
  
  -e) shift ; LOCDIR=$1 ;;

  -p) shift ; SIMROOT=$1 ;;

  -ext) shift ; EXT=$1 ;;

  -f) shift ; F=$1 ;;

  -r) shift ; RVAR=$1 ;;

  -loc) shift ; LOC=$1 ;;

  -u) shift ; UNITS=$1 ;;

  -dots) DOTS=1 ;;
  
  *) echo "ERROR: incorrect tgyro_plot syntax." ; exit 1 ;;

  esac
  shift
done
#==============================================================================

if [ "$LOCDIR" == "." ]
then
   LOCDIR=`basename $PWD`
   cd .. ; SIMROOT=$PWD
fi
SIMDIR=$SIMROOT/$LOCDIR
cd $SIMDIR

PYROOT=$GACODE_ROOT/python/tgyro

#==============================================================================
# 
#
case "$PLOT_TYPE" in

   note)  
	python $PYROOT/plot_notebook.py $SIMDIR $UNITS $EXT ;;

   glob)  
	python $PYROOT/plot_global.py $SIMDIR $F $EXT $RVAR $LOC $DOTS ;;

   null)
        echo "Please specify a plot type via -plot." ;;

   *)
        echo "Unrecognized plot type: $PLOT_TYPE" ;;
   
esac 

exit 0
