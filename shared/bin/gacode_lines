#!/bin/sh
#
# SCRIPT:
#  gacode_lines 
#
# FUNCTION:
#  Count number of code lines in gacode

list=" 
gyro
gyro/bin
gyro/BLEND
gyro/GKEIGEN
gyro/install
gyro/peek
gyro/src
gyro/SSUB
gyro/tools/fieldline
gyro/tools/gyro2gkv
gyro/TRANSPOSE
gyro/vugyro
neo
neo/src
neo/tools/squeeze
neo/tools/vgen
tgyro/src
tgyro/bin
tgyro
tgyro/math
shared
shared/batch
shared/bin
shared/EXPRO
shared/GEO
platform/build
platform/exec
shared/math
shared/profile_gen/astra
shared/profile_gen/modinput
shared/profile_gen/src
shared/profile_gen/transp
shared/python
"
pattern=" *" 

# Fortran 90
n=0
for dir in $list
do
   for file in $GACODE_ROOT/$dir/*.f90
   do
      total=`wc -l $file`
      if [ ${#total} -ne 0 ]
      then
         m="${total%$pattern}"
         n=`expr $n + $m`
      fi
   done
   for file in $GACODE_ROOT/$dir/*.F
   do
      total=`wc -l $file`
      if [ ${#total} -ne 0 ]
      then
         m="${total%$pattern}"
         n=`expr $n + $m`
      fi
   done
done
nf90=$n

# Fortran 77
n=0
for dir in $list
do
   for file in $GACODE_ROOT/$dir/*.f
   do
      total=`wc -l $file`
      if [ ${#total} -ne 0 ]
      then
         m="${total%$pattern}"
         n=`expr $n + $m`
      fi
   done
done
nf77=$n

# Python
n=0
for dir in $list
do
   for file in $GACODE_ROOT/$dir/*.py
   do
      total=`wc -l $file`
      if [ ${#total} -ne 0 ]
      then
         m="${total%$pattern}"
         n=`expr $n + $m`
      fi
   done
done
npy=$n

# Makefile
n=0
for dir in $list
do
   for file in $GACODE_ROOT/$dir/Makefile
   do
      total=`wc -l $file`
      if [ ${#total} -ne 0 ]
      then
         m="${total%$pattern}"
         n=`expr $n + $m`
      fi
   done
done
nmake=$n

# IDL
n=0
for dir in $list
do
   for file in $GACODE_ROOT/$dir/*.pro
   do
      total=`wc -l $file`
      if [ ${#total} -ne 0 ]
      then
         m="${total%$pattern}"
         n=`expr $n + $m`
      fi
   done
done
nidl=$n


echo "F90    : $nf90"
echo "F77    : $nf77"
echo "PYTHON : $npy"
echo "MAKE   : $nmake"
echo "IDL    : $nidl"
