#!/bin/sh
#
# SCRIPT:
#  gyro.DROP
#
# FUNCTION:
#  Parallel execution script

simdir=${1}
nmpi=${2}
exec=${3}
nomp=${4}
numa=${5}
mpinuma=${6}

cd $simdir

if [ "$TMPDIR" = "" ]
then
   mpiexec -host head -env OMP_NUM_THREADS $nomp -n $nmpi $exec
else
   mpiexec -env OMP_NUM_THREADS $nomp -machinefile $TMPDIR/machines -n $nmpi $exec
fi
